<div class="topic-index-wrapper">
  <div class="container">
    <% @topics.each do |topic| %>
    <div class="row">
      <div class="col-md-6 col-mdoffset-3">
        <div class="topic-index-single">
          <h2 class="topic-author"><%= topic.user.name %></h2>
          <%= image_tag topic.image.url %>
          <% if topic.favorited_by?(current_user) %>
           <%= link_to destroy_favorites_path(topic_id: topic.id),method: :delete do %>
            <%= image_tag "heart-black.png",class:'topic-index-icon-red' %>
           <% end %>ã€€
          <% else %>
           <%= link_to favorites_path(topic_id: topic.id),method: :post do %>
            <%= image_tag "heart-black.png",class:'topic-index-icon' %>
           <% end %> 
          <% end %>
          <%= image_tag"comment.png",class:'topic-index-icon' %>
          <p class="topic-text"><%= topic.description %></p>
        </div>
      </div>
     </div>
    <% end %>
  </div>
</div>