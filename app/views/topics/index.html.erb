<div class="topic-index-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-3 col-md-6">
       <% @topics.each do |topic| %>
        <div class="topic-index-single">
          <h2 class="topic-author">
          <%= topic.user.name %>
          </h2>
          <%= image_tag topic.image.url %>
          <% if topic.favorited_by?(current_user) %>
           <%= link_to favorites_path(topic_id: topic.id),method: :delete do %>
           <%= image_tag "good-red.png",class:'topic-index-icon' %><%= topic.favorites.count %>
           <% end %>
          <% else %>
           <%= link_to favorites_path(topic_id: topic.id),method: :post do %>
           <%= image_tag "good.png",class:'topic-index-icon' %><%= topic.favorites.count %>
           <% end %>
          <% end %>
          <p class="topic-text"><%= topic.description %></p>
          <a href="/topics/<%= topic.id %>"><%= image_tag"comment.png",class:'topic-index-icon' %></a>
         </div>
       <% end %>
      </div>
     </div>
    </div>
  </div>